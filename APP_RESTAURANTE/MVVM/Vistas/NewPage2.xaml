<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP_RESTAURANTE.MVVM.Vistas.NewPage2"
             Title="NewPage2">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Frame BackgroundColor="Yellow"
       HasShadow="True"
       CornerRadius="10"
       Padding="10">
            <Frame.Margin>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android" Value="150"/>
                    <On Platform="iOS" Value="5,10"/>
                    <On Platform="WinUI" Value="190,190,190,100"/>
                </OnPlatform>
                
               
            </Frame.Margin>

            <Label Text="benjamin"></Label>
        </Frame>
    </VerticalStackLayout>
</ContentPage>